<div class="container">
    <div id="cwJumbotron" class="jumbotron">
        <h1 id="cwh1" class="display-4">Fight Club</h1>
        <p id="rules" class="lead">If this is your first night at Fight Club, you have to fight.
            <br>Create your fighter below.
        </p>
        <div class="row">
            <div class="col-md-4 ">
                <div class="card" style="width: 18rem; ">
                    <img class="card-img-top " src="/assets/1.png" alt="Card image cap ">
                    <div class="card-body ">
                        <p class="card-text ">Feet of Strength</p>
                    </div>
                </div>
            </div>
            <div class="col-md-4 ">
                <div class="card " style="width: 18rem; ">
                    <img class="card-img-top " src="/assets/2.png" alt="Card image cap ">
                    <div class="card-body ">
                        <p class="card-text ">Artful Dodger</p>
                    </div>
                </div>
            </div>
            <div class="col-md-4 ">
                <div class="card " style="width: 18rem; ">
                    <img class="card-img-top " src="/assets/3.png" alt="Card image cap ">
                    <div class="card-body ">
                        <p class="card-text ">Health Nut</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div id="createInfo" class="card">
        <div class="card-body">
            <h5 id="formTitles" class="card-title">Login Information</h5>

            <div class="form-group">
                <label id="labels" for="formGroupExampleInput">Username:</label>
                <input type="text" id="userName" class="form-control" placeholder="Fighter - Be more creative than this">
            </div>
            <div class="form-group">
                <label for="formGroupExampleInput">Password:</label>
                <input type="text" id="password" class="form-control" placeholder="Password">
            </div>
            <div class="form-group">
                <label id="labels" for="formGroupExampleInput">Enter Password Again:</label>
                <input type="text" id="password2" class="form-control" placeholder="Password">
            </div>
            <div id="pwAlert" class="alert alert-danger" role="alert">
                Passwords Do Not Match!
            </div>
            <div id="nameAlert" class="alert alert-danger" role="alert">
                Username Already In Use!
            </div>
            <hr>
            <div class="form-group">
                <h5 id="formTitles" class="card-title">Fighter Customization</h5>
                <label id="labels" for="chosenFighter">Pick Your Fighter:</label>
                <br>
                <div class="form-check form-check-inline">
                    <input class="form-check-input" type="radio" name="warrior" id="warrior1" value=1>
                    <label class="form-check-label" for="inlineCheckbox1">Feet of Strength</label>
                </div>
                <div class="form-check form-check-inline">
                    <input class="form-check-input" type="radio" name="warrior" id="warrior2" value=2>
                    <label class="form-check-label" for="inlineCheckbox2">Artful Dodger</label>
                </div>
                <div class="form-check form-check-inline">
                    <input class="form-check-input" type="radio" name="warrior" id="warrior3" value=3>
                    <label class="form-check-label" for="inlineCheckbox2">Health Nut</label>
                </div>
                <div id="warriorAlert" class="alert alert-danger" role="alert">
                    Pick A Fighter
                </div>
            </div>
            <div class="form-group">
                <label id="labels" for="Skills">You have 15 Skill Points To Spend:</label>
                <br>
                <select id="speed" class="custom-select">
                    <option selected>Speed</option>
                    <option value="0">0</option>
                    <option value="1">1</option>
                    <option value="2">2</option>
                    <option value="3">3</option>
                    <option value="4">4</option>
                    <option value="5">5</option>
                    <option value="6">6</option>
                    <option value="7">7</option>
                    <option value="8">8</option>
                    <option value="9">9</option>
                    <option value="10">10</option>
                    <option value="11">11</option>
                    <option value="12">12</option>
                    <option value="13">13</option>
                    <option value="14">14</option>
                    <option value="15">15</option>
                </select>
                <select id="health" class="custom-select">
                    <option selected>Health</option>
                    <option value="0">0</option>
                    <option value="1">1</option>
                    <option value="2">2</option>
                    <option value="3">3</option>
                    <option value="4">4</option>
                    <option value="5">5</option>
                    <option value="6">6</option>
                    <option value="7">7</option>
                    <option value="8">8</option>
                    <option value="9">9</option>
                    <option value="10">10</option>
                    <option value="11">11</option>
                    <option value="12">12</option>
                    <option value="13">13</option>
                    <option value="14">14</option>
                    <option value="15">15</option>
                </select>
                <select id="strength" class="custom-select">
                    <option selected>Strength</option>
                    <option value="0">0</option>
                    <option value="1">1</option>
                    <option value="2">2</option>
                    <option value="3">3</option>
                    <option value="4">4</option>
                    <option value="5">5</option>
                    <option value="6">6</option>
                    <option value="7">7</option>
                    <option value="8">8</option>
                    <option value="9">9</option>
                    <option value="10">10</option>
                    <option value="11">11</option>
                    <option value="12">12</option>
                    <option value="13">13</option>
                    <option value="14">14</option>
                    <option value="15">15</option>
                </select>
                <div id="skillsAlertOver" class="alert alert-danger" role="alert">
                    You Have 15 Skills Points - Dial It Back
                </div>
                <div id="skillsAlertUnder" class="alert alert-danger" role="alert">
                    You Have 15 Skill points - Use Them All
                </div>
            </div>
            <button id="cwSubmit" type="button" class="btn btn-primary">Step Into The Ring</button>
        </div>
    </div>
</div>
